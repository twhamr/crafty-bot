                "properties": {
                    "host": {
                        "title": "Host",
                        "type": "string",
                        "default": "127.0.0.1",
                        "examples": [
                            "127.0.0.1"
                        ],
                        "minLength": 1,
                        "error": "typeString",
                        "fill": true
                    },
                    "port": {
                        "title": "Port",
                        "type": "integer",
                        "examples": [
                            25565
